<html>
    <head>
        <title>To Do List</title>
    </head>
    <body>
        <h1>Welcome to To Do List</h1>

        <p>Create a new category:</p>

        <form action="/categories" method="post">
            <label for="name">Category name:</label>
            <input id="name" name="name" type="text">

            <button type="submit">Add category</button>
        </form>

        {% if categories is not empty %}
            <p>Here are all your categories:</p>
            <ul>
                {% for category in categories %}
                    <li><a href="/categories/{{ category.getId }}">{{ category.getName }}</a></li>
                {% endfor %}
            </ul>
        {% else %}
            <p>There are no categories yet!</p>
        {% endif %}

        <!-- <p><a href="/categories">Click here</a> to see of the categories and to add a category.</p>
        <p><a href="/tasks">Click here</a> to see all of the tasks and to add a task.</p> -->

    </body>
</html>
